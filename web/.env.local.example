# ========================================
# Configuration Frontend FootballHub+
# ========================================
# Copiez ce fichier en .env.local et remplissez les valeurs

# ========================================
# API Backend Configuration
# ========================================
# URL de votre API backend (sans slash à la fin)
NEXT_PUBLIC_API_URL=https://api.votre-domaine.com
# OU si backend sur le même domaine
# NEXT_PUBLIC_API_URL=https://votre-domaine.com/api

# ========================================
# WebSocket Configuration
# ========================================
# URL WebSocket pour les mises à jour en temps réel
NEXT_PUBLIC_WS_URL=wss://api.votre-domaine.com

# ========================================
# Site Configuration
# ========================================
NEXT_PUBLIC_SITE_URL=https://votre-domaine.com
NEXT_PUBLIC_SITE_NAME=FootballHub+
NEXT_PUBLIC_SITE_DESCRIPTION=Plateforme de billetterie et suivi de football en direct

# ========================================
# Stripe Configuration (Paiements)
# ========================================
# Clé publique Stripe (commence par pk_)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ========================================
# Firebase Configuration (Notifications Push)
# ========================================
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your_vapid_key

# ========================================
# Google Analytics (optionnel)
# ========================================
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# ========================================
# Sentry (Error Tracking - optionnel)
# ========================================
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# ========================================
# Feature Flags
# ========================================
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_SHOP=true
NEXT_PUBLIC_ENABLE_PREDICTIONS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# ========================================
# Environment
# ========================================
NEXT_PUBLIC_ENV=production

# ========================================
# API Keys externes (si nécessaire)
# ========================================
# Google Maps (pour la localisation des stades)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Cloudinary (pour l'upload d'images)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# ========================================
# Supabase Configuration
# ========================================
NEXT_PUBLIC_SUPABASE_URL=your_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key

# ========================================
# News API Configuration
# ========================================
NEWS_API_KEY=your_news_api_key

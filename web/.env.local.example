# ============================================
# Application Configuration
# ============================================

# Application Info
NEXT_PUBLIC_APP_NAME=SupFootball
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# Development & Mock Data
# ============================================

# Set to 'true' to use mock/demo data instead of real API calls
# Useful for development and testing without a backend
NEXT_PUBLIC_USE_MOCK_DATA=false

# Enable API call logging in development
NEXT_PUBLIC_LOG_API_CALLS=false

# ============================================
# API Configuration
# ============================================

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# WebSocket URL for real-time features
NEXT_PUBLIC_WS_URL=ws://localhost:5000

# Football Data API (optional - for live match data)
NEXT_PUBLIC_FOOTBALL_API_KEY=your_api_key_here
NEXT_PUBLIC_FOOTBALL_API_URL=https://v3.football.api-sports.io

# ============================================
# Supabase Configuration
# ============================================

NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ============================================
# Payment Configuration
# ============================================

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_key_here

# PayPal
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id_here

# ============================================
# Analytics & Tracking
# ============================================

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_ga_id_here

# Enable analytics
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ============================================
# Push Notifications
# ============================================

# Firebase Cloud Messaging
NEXT_PUBLIC_FCM_VAPID_KEY=your_fcm_vapid_key_here

# ============================================
# Feature Flags
# ============================================

# Enable/disable specific features
NEXT_PUBLIC_ENABLE_AI_HUB=true
NEXT_PUBLIC_ENABLE_SHOP=true
NEXT_PUBLIC_ENABLE_FANTASY=true
NEXT_PUBLIC_ENABLE_CHAT=false

# ============================================
# File Upload
# ============================================

MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# ============================================
# Notes
# ============================================

# 1. Copy this file to .env.local and fill in your actual values
# 2. Never commit .env.local to version control
# 3. For production, use environment variables in your hosting platform
# 4. Set NEXT_PUBLIC_USE_MOCK_DATA=true for development without backend

# ============================================
# FootballHub+ Environment Variables
# ============================================

# API Configuration
# URL de l'API backend (sans slash final)
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# API Football (API-Football.com)
# Clé API pour les données de football en temps réel
NEXT_PUBLIC_FOOTBALL_API_KEY=your_api_football_key_here
NEXT_PUBLIC_FOOTBALL_API_URL=https://v3.football.api-sports.io

# Database (Backend)
# URL de connexion MongoDB
MONGODB_URI=mongodb://localhost:27017/footballhub

# Authentication
# Secret pour JWT tokens (générer avec: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Payment Gateways
# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# PayPal
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_secret

# Email Service (SendGrid, Mailgun, etc.)
EMAIL_SERVICE_API_KEY=your_email_service_key
EMAIL_FROM=noreply@footballhub.com

# Push Notifications (Firebase Cloud Messaging)
NEXT_PUBLIC_FCM_VAPID_KEY=your_fcm_vapid_key
FCM_SERVER_KEY=your_fcm_server_key

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Environment
NODE_ENV=development

# App Configuration
NEXT_PUBLIC_APP_NAME=FootballHub+
NEXT_PUBLIC_APP_URL=http://localhost:3000

# WebSocket Server
NEXT_PUBLIC_WS_URL=ws://localhost:5000

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=604800000

# CORS
CORS_ORIGIN=http://localhost:3000

# Redis (pour le cache et les sessions)
REDIS_URL=redis://localhost:6379

# Cloudinary (pour le stockage d'images)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
